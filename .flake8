# .flake8
[flake8]
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info

max-line-length = 100
max-complexity = 10
ignore =
    # E203: whitespace before ':' (black handles this)
    E203,
    # W503: line break before binary operator (black handles this)
    W503

per-file-ignores =
    # F401: imported but unused (allow in __init__.py files)
    __init__.py:F401